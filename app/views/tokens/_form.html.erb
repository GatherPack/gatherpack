<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :value %>
  <%= f.input :tokenable_id, as: :select, collection: Person.all.map { |p| [p.display_name, p.id] } %>
  <%= f.input :tokenable_type, as: :hidden, input_html: { :value => "Person"} %>
</div>
