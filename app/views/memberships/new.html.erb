<% breadcrumb @membership, (@team || @person) %>

<%= simple_form_for([(@team || @person), @membership]) do |f| %>
  <div class="card">
    <div class="card-header">
      <h1>New membership</h1>
    </div>
    <div class="card-body">
      <%= render "form", f: f %>
    </div>
    <div class="card-footer">
      <% target = if @team
        team_memberships_path(@team)
      else
        person_memberships_path(@person)
      end %>
      <%= link_to "Cancel", target, class: 'btn btn-warning' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
