<%= search_form_for @q, data: {"controller": "turbo_search", "turbo_frame": "results"} do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Events</h1>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <%= f.input :name_i_cont, label: 'Name' %>
      </div>
      <div class="col">
        <%= f.input :location_i_cont, label: 'Location' %>
      </div>
      <div class="col">
        <%= f.input :event_type_id_eq, label: 'Event Type', as: :select, collection: EventType.all %>
      </div>
      <div class="col">
        <%= f.input :team_id_eq, label: 'Teams', as: :select, collection: Team.all %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to "New event", new_event_path, class: 'btn btn-success' %>
    <%= f.submit 'Search', class: 'btn btn-primary', data: { action: "turbo_search#search" } %>
  </div>
</div>
<% end %>

<%= turbo_frame_tag "results" do %>
  <div id="events" class="row">
    <% @events.each do |event| %>
      <div class="col-md-3">
        <%= render event %>
      </div>
    <% end %>
  </div>

  <%= paginate @events %>
<% end %>
