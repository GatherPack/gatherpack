<% breadcrumb @hook %>

<div class="card">
  <div class="card-header">
    <h1><%= @hook.identifier_name %></h1>
  </div>
  <div class="card-body">
    <code data-lang="ruby"><pre><%= @hook.code %></pre></code>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_hook_path(@hook), class: 'btn btn-warning' %>
    <%= link_to 'Delete', @hook, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
