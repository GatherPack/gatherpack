<% breadcrumb @hook %>

<%= simple_form_for(@hook) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>New hook</h1>
  </div>
  <div class="card-body">
    <%= render "form", f: f %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", hooks_path, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
