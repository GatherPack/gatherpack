<%= simple_form_for @ledger_payment do |f| %>
  <div class="card">
    <div class="card-header">
      <h1>Pay Into <%= @ledger_payment.ledger.name %></h1>
    </div>
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-3">
          <%= f.input :amount %>
          <%= f.input :remark %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.input :ledger_id, as: :hidden %>
          <%= f.input :gateway_id, as: :radio_buttons, collection: Gateway.registered(:payment) %>
        </div>
        <div class="col-12 col-md-3">
          <%= f.button :submit, "Make Payment", class: 'btn btn-primary btn-lg w-100' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
