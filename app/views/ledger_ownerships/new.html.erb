<% breadcrumb :new, "ledger ownership" %>

<%= simple_form_for(@ledger_ownership) do |f| %>
  <div class="card">
    <div class="card-header">
      <h1>Add New Owner for <%= @ledger.name %></h1>
    </div>
    <div class="card-body">
      <%= render "form", f: f %>
    </div>
    <div class="card-footer">
      <%= link_to "Cancel", ledger_ownerships_path, class: 'btn btn-warning' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
