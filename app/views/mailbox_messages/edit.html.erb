<% breadcrumb @mailbox_message %>

<%= simple_form_for([@mailbox, @mailbox_message]) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Editing <%= @mailbox_message.identifier_name %></h1>
  </div>
  <div class="card-body">
    <%= render "form", f: f %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", @mailbox_message, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
