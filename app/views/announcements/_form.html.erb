<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.input :title %>
    </div>
    <div class="col-12 col-md-6">
      <%= f.label :team_id, "Team" %>
      <%= f.select :team_id, current_user.person.managed_teams.map { |t| [ t.identifier_name, t.id ] }, { include_blank: admin? }, { data: { controller: "slim" } } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.input :start_time %>
    </div>
    <div class="col-12 col-md-6">
      <%= f.input :end_time %>
    </div>
  </div>
  
  <%= f.input :content %>
  
  
</div>
