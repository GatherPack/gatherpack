<% breadcrumb @budget %>

<div class="card">
  <div class="card-header">
    <h1><%= @budget.identifier_name %></h1>
  </div>
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col">
        <div>
          <%= as_badge @budget.budget_period.team, small: true %>
          <%= link_to @budget.budget_period.identifier_name, @budget.budget_period, 'data-turbo': false %>
        </div>
        <div><%= @budget.ledger_tags.map { |tag| as_badge tag }.join(' ').html_safe %></div>
      </div>
      <div class="col">
        <div class="progress my-1" role="progressbar" aria-label="Basic example" aria-valuenow="<%= @budget.percentage %>" aria-valuemin="0" aria-valuemax="100">
          <div class="progress-bar bg-success" style="width: <%= @budget.percentage %>%"></div>
        </div>
        <div class="row">
          <div class="col">
            <div><%= as_currency @budget.actual_amount %><br>Actual</div>
          </div>
          <div class="col">
            <div class="text-end"><%= as_currency @budget.amount %><br>Budgeted</div>
          </div>
        </div>
      </div>
      <div class="col fs-4">
        <%= as_currency @budget.remaining_amount %><br>Remaining
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_budget_path(@budget), class: 'btn btn-warning' if policy(@budget).edit? %>
    <%= link_to 'Delete', @budget, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } if policy(@budget).destroy? %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h2>Entries</h2>
  </div>
  <div class="card-body ledger">
    <div class="row header">
      <div class="col-4 col-lg-1">Posted At</div>
      <div class="col-6 col-lg-2 text-end">Amount</div>
      <div class="col-8 col-lg-3">Remark</div>
      <div class="col-12 col-lg-3">Tags</div>
      <div class="col-6 col-lg-2">Actions</div>
    </div>
    <% @budget.ledger_entries.order('created_at DESC').each do |e| %>
      <div class="row entry">
        <div class="col-4 col-lg-1">
          <%= nice_date e.created_at %>
        </div>
        <div class="col-6 col-lg-2 fs-4 text-end">
          <%= as_currency e.amount, failed: e.failed, finalized: e.finalized %>
        </div>
        <div class="col-8 col-lg-3">
          <%= e.remark %>
          <% if e.ledger_entry_links.any? %>
            <%= i 'link' %>
          <% end %>
          <% if e.parent.present? %>
            <%= i 'arrows-split-up-and-left' %>
          <% end %>
          <% if e.split? %>
            <%= i 'code-fork' %>
            <% if !e.fully_split? %>
              <%= i 'triangle-exclamation' %>
            <% end %>
          <% end %>
          <% e.receipts.each do |r| %>
            <%= link_to i('file-invoice-dollar'), r, target: '_blank' %>
          <% end %>
        </div>
        <div class="col-12 col-lg-3">
          <div class="badge-container">
            <% e.ledger_tags.each do |tag| %>
              <%= as_badge tag %>
            <% end %>
          </div>
        </div>
        <div class="col-6 col-lg-2">
          <% if e.parent.present? %>
            <%= link_to i('arrows-split-up-and-left'), ledger_ledger_entry_path(e.ledger, e.parent), class: 'btn btn-sm btn-dark' if policy(e).show? %>
            <%= link_to i('pen-to-square'), edit_ledger_ledger_entry_path(e.ledger, e.parent), class: 'btn btn-sm btn-warning' if policy(e).edit? %>
          <% else %>
            <%= link_to i('magnifying-glass'), ledger_ledger_entry_path(e.ledger, e), class: 'btn btn-sm btn-info' if policy(e).show? %>
            <%= link_to i('pen-to-square'), edit_ledger_ledger_entry_path(e.ledger, e), class: 'btn btn-sm btn-warning' if policy(e).edit? %>
          <% end %>
          <%= link_to i('trash'), ledger_ledger_entry_path(e.ledger, e), data: { turbo_method: 'DELETE', turbo_confirm: 'Really delete entry?'}, class: 'btn btn-sm btn-danger' if policy(e).destroy? %>
        </div>
      </div>
    <% end %>
  </div>
</div>