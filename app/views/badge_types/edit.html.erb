<%= simple_form_for(@badge_type) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Editing <%= @badge_type.identifier_name %></h1>
  </div>
  <div class="card-body">
    <%= render "form", f: f %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", @badge_type, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
