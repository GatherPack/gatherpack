<% if ledger_entry.finalized? %>
  <p>Paid via <%= i 'cc-stripe', family: 'brands' %></p>
<% elsif ledger_entry.failed? %>
  <p><%= i 'cc-stripe', family: 'brands' %> payment failed, please try again.</p>
<% else %>
  <p>
    Pending via <%= i 'cc-stripe', family: 'brands' %> -
    <%= link_to "Pay Now", ledger_entry.metadata.dig("stripe_checkout_session", "url") %>
  </p>
<% end %>
