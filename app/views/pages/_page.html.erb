<div class="card" id="<%= dom_id page %>">
  <div class="card-header">
    <%= link_to page.identifier_name, page, 'data-turbo': false %>
  </div>
  <div class="card-body">
    <% if page.dynamic %>
      <div class="badge" style="font-variant: small-caps;">DYNAMIC</div>
    <% else %>
      <%= strip_tags(format_page_content(page)).truncate(50, separator: ' ') rescue "ERROR" %>
    <% end %>
  </div>
</div>
