<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row">
  <div class="col-md">
    <%= f.input :title %>
  </div>
  <div class="col-md">
    <%= f.input :team_id, as: :searching_combobox, label: 'Team', scope: "managed_teams", include_blank: admin? %>
  </div>
  <div class="col-md">
    <%= f.input :viewer, as: :select, collection: page_permissions, include_blank: false %>
  </div>
  <div class="col-md">
    <%= f.input :editor, as: :select, collection: page_permissions - [ "public" ], include_blank: false %>
  </div>
</div>

<%= f.input :content, wrapper_html: { class: 'code-editor' }, input_html: { rows: 12, data: { lang: "html" } } %>

<% if admin? %>
  <div class="alert alert-danger">
    <%= f.input :dynamic, label: 'Enable ERB Parsing?' %>  
  </div>
<% end %>
  
