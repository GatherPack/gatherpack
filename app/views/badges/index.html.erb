<% breadcrumb :badges %>

<%= search_form_for @q, data: {"controller": "turbo_search", "turbo_frame": "results"} do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Badges</h1>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <%= f.input :name_or_description_or_short_cont, label: 'Name' %>
      </div>
      <div class="col">
        <%= f.label :badge_type_id_eq, "Badge Type" %>
        <%= f.select :badge_type_id_eq, BadgeType.all.map { |bt| [ bt.identifier_name, bt.id ] }, { include_blank: true }, { data: { controller: "slim" } } %>
      </div>
      <div class="col">
        <%= f.label :team_id_eq, "Team" %>
        <%= f.select :team_id_eq, policy_scope(Team).map { |t| [ t.identifier_name, t.id ] }, { include_blank: true }, { data: { controller: "slim" } } %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to "New Badge", new_badge_path, class: 'btn btn-success' if policy(Badge).new? %>
    <%= f.submit 'Search', class: 'btn btn-primary', data: { action: "turbo_search#search" } %>
    <%= link_to 'Clear Search', request.path, class: "btn btn-dark", data: { action: "turbo_search#clear" } %>
  </div>
</div>
<% end %>

<%= turbo_frame_tag "results" do %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Sort By
    </button>
    <ul class="dropdown-menu">
      <li><%= sort_link @q, :name, "Name", class: "dropdown-item" %></li>
      <li><%= sort_link @q, :updated_at, "Last Updated", class: "dropdown-item" %></li>
    </ul>
  </div>

  <div id="badges" class="row">
    <% @badges.each do |badge| %>
      <div class="col-md-3">
        <%= render badge %>
      </div>
    <% end %>
  </div>

  <%= paginate @badges %>
<% end %>
