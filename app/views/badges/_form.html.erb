<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row">
  <div class="col-md-6">
    <%= f.input :name %>
    <%= f.input :description %>
    <div class="row">
      <div class="col-8">
        <%= f.input :color, as: :fancy_color %>
      </div>
      <div class="col-4">
        <%= f.input :short %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <%= f.association :badge_type %>
    <%= f.association :team, collection: policy_scope(Team) %>

    <%= f.association :people, as: :check_boxes, collection: @badge.team ? @badge.team.people : Person.all, label_method: :identifier_name %>
  </div>
</div>
