<div class="card" id="<%= dom_id badge %>">
  <div class="card-header">
    <%= link_to badge, class: 'badge-container', "data-turbo": "false" do %>
      <%= as_badge badge %>&nbsp;<%= badge.identifier_name %>
    <% end %>
  </div>
  <div class="card-body">
    <%= pluralize badge.people.count, 'person' %>
  </div>
</div>
