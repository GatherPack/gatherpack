<% breadcrumb :new, 'person' %>

<%= simple_form_for(@person) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>New person</h1>
  </div>
  <div class="card-body">
    <%= render "form", f: f %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", people_path, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
