<div class="row fullscreen">
  <div class="col-12">
    <div class="logoline">Get Together with <%= image_tag( 'logo.svg', alt: 'GatherPack', class: 'logo') %> GatherPack</a></div>
  </div>
  <%- if Settings[:local_auth] %>
    <div class="col-md-6 m-auto">
      <div class="card">
        <div class="card-header">
          <h2>Sign In with Email &amp; Password</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.input :email %>

            <%= f.input :password %>

            <% if devise_mapping.rememberable? %>
              <%= f.input :remember_me, as: :boolean %>
            <% end %>

            <%- if devise_mapping.recoverable? %>
              <div class="mb-3">
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Sign in", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>

      <%- if Settings[:local_signup] %>
        <div class="card">
          <div class="card-header">
            <h2>Create an Account with Email &amp; Password</h2>
          </div>
          <div class="card-body">
            <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? && Devise.omniauth_configs.keys.any? %>
    <div class="col-md-6 m-auto">
      <div class="card">
        <div class="card-header">
          <h2>Sign In or Sign Up With Another Account</h2>
        </div>
        <div class="card-body">
          <%= button_to omniauth_authorize_path(resource_name, :developer), data: { turbo: false }, class: 'btn btn-lg btn-secondary d-block w-100 text-center my-2' do
            icon_text('code', 'Developer Log In')
          end if Devise.omniauth_configs.keys.include?(:developer) %>

          <%= button_to omniauth_authorize_path(resource_name, :discord), data: { turbo: false }, class: 'btn btn-lg btn-secondary d-block w-100 text-center my-2' do
            icon_text('discord', 'Log In with Discord', family: 'brands')
          end if Devise.omniauth_configs.keys.include?(:discord) %>

          <%= button_to omniauth_authorize_path(resource_name, :github), data: { turbo: false }, class: 'btn btn-lg btn-secondary d-block w-100 text-center my-2' do
            icon_text('github', 'Log In with Github', family: 'brands')
          end if Devise.omniauth_configs.keys.include?(:github) %>

          <%= button_to omniauth_authorize_path(resource_name, :google_oauth2), data: { turbo: false }, class: 'btn btn-lg btn-secondary d-block w-100 text-center my-2' do
            icon_text('google', 'Log In with Google', family: 'brands')
          end if Devise.omniauth_configs.keys.include?(:google_oauth2) %>

        </div>
      </div>
    </div>
  <% end %>
</div>
