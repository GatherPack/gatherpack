<div class="row fullscreen">
  <div class="col-12">
    <div class="logoline">Get Together with <%= image_tag( 'logo.svg', alt: 'GatherPack', class: 'logo') %> GatherPack</a></div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2>Change your password</h2>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.input :password, autofocus: true, autocomplete: "new-password", label: "New password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </div>

          <div class="field">
            <%= f.input :password_confirmation, autocomplete: "new-password", label: "Confirm new password" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
