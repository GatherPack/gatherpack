<div class="row fullscreen">
  <div class="col-12">
    <div class="logoline">Get Together with <%= image_tag( 'logo.svg', alt: 'GatherPack', class: 'logo') %> GatherPack</a></div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2>Forgot your password?</h2>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="field">
            <%= f.input :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Create an Account with Email &amp; Password</h2>
      </div>
      <div class="card-body">
        <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <%= render partial: 'devise/shared/omniauth' %>
</div>
