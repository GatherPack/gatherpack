<% breadcrumb @badge %>

<%= simple_form_for(@badge) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Editing <%= @badge.identifier_name %></h1>
  </div>
  <div class="card-body">
    <%= f.association :people, as: :check_boxes, collection: (@badge.team ? @badge.team.people : Person.all).order(last_name: :asc, first_name: :asc), label_method: :identifier_name %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", @badge, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>