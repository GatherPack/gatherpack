<% breadcrumb @badge %>

<%= simple_form_for(@badge) do |f| %>
<div class="card">
  <div class="card-header">
    <h1>Editing <%= @badge.identifier_name %></h1>
  </div>
  <div class="card-body">
    <%= f.label :person_ids, "People" %>
    <%= f.select :person_ids, @people.map { |p| [ p.identifier_name, p.id ] }, { allow_blank: true }, { multiple: true, data: { controller: "slim" } } %>
  </div>
  <div class="card-footer">
    <%= link_to "Cancel", @badge, class: 'btn btn-warning' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
