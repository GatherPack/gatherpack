<% breadcrumb @operation %>

<div class="card">
  <div class="card-header">
    <h1><%= @operation.identifier_name %></h1>
  </div>
  <div class="card-body">
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_operation_path(@operation), class: 'btn btn-warning' %>
    <%= link_to 'Delete', @operation, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
